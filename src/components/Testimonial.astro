---
import Avatar from "./Avatar.astro";

  const { title, quote, author, authorInfo, avatarImage, avatarInitials } = Astro.props;
---

<figure class="p-6 bg-gray-50 rounded dark:bg-gray-800">
    <blockquote class="text-sm text-gray-500 dark:text-white/60">
        <h3 class="text-lg font-semibold leading-tight text-gray-900 dark:text-white text-balance">{title}</h3>
        <p class="my-4">{quote}</p>
    </blockquote>
    <figcaption class="flex items-center space-x-3">
      {
        avatarImage
          ? <img class="w-9 h-9 rounded-full" src={avatarImage} alt={`FotografÃ­a de {author}`}>
          : <Avatar initials={avatarInitials} />
      }
      <div class="space-y-0.5 font-medium dark:text-white">
          <div>{author}</div>
          <div class="text-sm font-light text-gray-500 dark:text-gray-400">{authorInfo}</div>
      </div>
    </figcaption>    
</figure>
  